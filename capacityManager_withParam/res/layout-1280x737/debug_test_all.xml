<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:unit="http://schemas.android.com/apk/res/com.lxdz.capacity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_new"
    android:orientation="vertical" >

    <!--
         <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:scrollbars="vertical" >
         <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5.0dip" >
    -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_weight="4"
        android:orientation="vertical"
        android:padding="2dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@drawable/panel_green_head"
            android:gravity="center_vertical"
            android:paddingBottom="2dip"
            android:paddingTop="2dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="调试系数"
                android:textSize="@dimen/text_size_22"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="3"
            android:orientation="horizontal" >

            <fragment
                android:id="@+id/debugCofficient_debugAll"
                android:name="com.lxdz.capacity.fragment.PublicReturnFragment"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/panel_single_body"
                    android:gravity="center_vertical"
                    android:paddingTop="2dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:duplicateParentState="true"
                        android:paddingLeft="10dp"
                        android:text="Ja:"
                        android:textSize="@dimen/text_size_22"
                        android:textStyle="bold" />

                    <com.lxdz.capacity.widget.UnitView
                        android:id="@+id/ja_debugAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10.0dip"
                        android:layout_weight="1"
                        android:imeOptions="actionNext"
                        android:textSize="@dimen/text_size_20"
                        unit:enabled="false"
                        unit:textColor="@color/orange" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/panel_single_body"
                    android:gravity="center_vertical"
                    android:paddingTop="2dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:duplicateParentState="true"
                        android:paddingLeft="10dp"
                        android:text="Jb:"
                        android:textSize="@dimen/text_size_22"
                        android:textStyle="bold" />

                    <com.lxdz.capacity.widget.UnitView
                        android:id="@+id/jb_debugAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10.0dip"
                        android:layout_weight="1"
                        android:imeOptions="actionNext"
                        android:textSize="@dimen/text_size_20"
                        unit:enabled="false"
                        unit:textColor="@color/green" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/panel_single_body"
                    android:gravity="center_vertical"
                    android:paddingBottom="2dip"
                    android:paddingTop="2dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:duplicateParentState="true"
                        android:paddingLeft="10dp"
                        android:text="Jc:"
                        android:textSize="@dimen/text_size_22"
                        android:textStyle="bold" />

                    <com.lxdz.capacity.widget.UnitView
                        android:id="@+id/jc_debugAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10.0dip"
                        android:layout_weight="1"
                        android:imeOptions="actionNext"
                        android:textSize="@dimen/text_size_20"
                        unit:enabled="false"
                        unit:textColor="@color/red" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_weight="4"
        android:orientation="vertical"
        android:padding="2dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@drawable/panel_green_head"
            android:gravity="center_vertical"
            android:paddingBottom="2dip"
            android:paddingTop="2dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="测试结果"
                android:textSize="@dimen/text_size_22"
                android:textStyle="bold" />
        </LinearLayout>

        <fragment
            android:id="@+id/publicResult_debugAll"
            android:name="com.lxdz.capacity.fragment.PublicReturnFragment"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_weight="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginBottom="5dip"
        android:layout_weight="3.5"
        android:background="@drawable/panel_single_body"
        android:orientation="vertical"
        android:padding="2dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="2dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:duplicateParentState="true"
                android:paddingLeft="10dp"
                android:text="项目选择:"
                android:textSize="@dimen/text_size_22" />

            <RadioGroup
                android:id="@+id/debugProjectRadio_debugAll"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/noloadBtn_debugAll"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1"
                    android:background="@drawable/radiobutton_config"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:padding="5dip"
                    android:tag="01"
                    android:text="空载"
                    android:textSize="@dimen/text_size_24" />

                <RadioButton
                    android:id="@+id/capacityBtn_debugAll"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1"
                    android:background="@drawable/radiobutton_config"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dip"
                    android:tag="02"
                    android:text="容量"
                    android:textSize="@dimen/text_size_24" />
            </RadioGroup>
        </LinearLayout>

        <RadioGroup
            android:id="@+id/debugClass1_debugAll"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="2dip" >

            <RadioButton
                android:id="@+id/uaBtn_debugAll"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_config"
                android:button="@null"
                android:gravity="center"
                android:padding="10dip"
                android:tag="01"
                android:text="Ua"
                android:textSize="@dimen/text_size_30" />

            <RadioButton
                android:id="@+id/ubBtn_debugAll"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_config"
                android:button="@null"
                android:gravity="center"
                android:padding="10dip"
                android:tag="02"
                android:text="Ub"
                android:textSize="@dimen/text_size_30" />

            <RadioButton
                android:id="@+id/ucBtn_debugAll"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_config"
                android:button="@null"
                android:gravity="center"
                android:padding="10dip"
                android:tag="03"
                android:text="Uc"
                android:textSize="@dimen/text_size_30" />

            <RadioButton
                android:id="@+id/iaBtn_debugAll"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_config"
                android:button="@null"
                android:gravity="center"
                android:padding="10dip"
                android:tag="17"
                android:text="Ia"
                android:textSize="@dimen/text_size_30" />

            <RadioButton
                android:id="@+id/ibBtn_debugAll"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_config"
                android:button="@null"
                android:gravity="center"
                android:padding="10dip"
                android:tag="18"
                android:text="Ib"
                android:textSize="@dimen/text_size_30" />

            <RadioButton
                android:id="@+id/icBtn_debugAll"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_config"
                android:button="@null"
                android:gravity="center"
                android:padding="10dip"
                android:tag="09"
                android:text="Ic"
                android:textSize="@dimen/text_size_30" />

            <RadioButton
                android:id="@+id/paBtn_debugAll"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_config"
                android:button="@null"
                android:gravity="center"
                android:padding="10dip"
                android:tag="10"
                android:text="Pa"
                android:textSize="@dimen/text_size_30" />

            <RadioButton
                android:id="@+id/pbBtn_debugAll"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_config"
                android:button="@null"
                android:gravity="center"
                android:padding="10dip"
                android:tag="11"
                android:text="Pb"
                android:textSize="@dimen/text_size_30" />

            <RadioButton
                android:id="@+id/pcBtn_debugAll"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_config"
                android:button="@null"
                android:gravity="center"
                android:padding="10dip"
                android:tag="12"
                android:text="Pc"
                android:textSize="@dimen/text_size_30" />

            <RadioButton
                android:id="@+id/jaBtn_debugAll"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_config"
                android:button="@null"
                android:gravity="center"
                android:padding="10dip"
                android:tag="13"
                android:text="Ja"
                android:textSize="@dimen/text_size_30" />

            <RadioButton
                android:id="@+id/jbBtn_debugAll"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_config"
                android:button="@null"
                android:gravity="center"
                android:padding="10dip"
                android:tag="14"
                android:text="Jb"
                android:textSize="@dimen/text_size_30" />

            <RadioButton
                android:id="@+id/jcBtn_debugAll"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_config"
                android:button="@null"
                android:gravity="center"
                android:padding="10dip"
                android:tag="15"
                android:text="Jc"
                android:textSize="@dimen/text_size_30" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_marginTop="5dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/inputValue_debugAll"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:layout_weight="2"
                android:background="@drawable/bg_edittext"
                android:duplicateParentState="false"
                android:imeOptions="actionNext"
                android:numeric="decimal"
                android:textColor="@color/author_text"
                android:textSize="@dimen/text_size_20" />

            <Button
                android:id="@+id/sendData_debugAll"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@drawable/btn_config"
                android:text="发送"
                android:textSize="@dimen/text_size_22" />

            <Button
                android:id="@+id/capacityTest_debugAll"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@drawable/btn_config"
                android:text="容量测试"
                android:textSize="@dimen/text_size_22"
                android:visibility="gone" />

            <Button
                android:id="@+id/saveVoltage_debugAll"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@drawable/btn_config"
                android:text="电压保存"
                android:textSize="@dimen/text_size_22" />

            <Button
                android:id="@+id/saveCurrent_debugAll"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@drawable/btn_config"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="电流保存"
                android:textSize="@dimen/text_size_22" />

            <Button
                android:id="@+id/getCofficientBtn_debugAll"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                android:background="@drawable/btn_config"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="调试系数"
                android:textSize="@dimen/text_size_22" />
        </LinearLayout>
    </LinearLayout>

    <!-- </LinearLayout></ScrollView> -->

</LinearLayout>